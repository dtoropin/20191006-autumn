.contacts#contacts
  .contacts__container.container
    h2.section-title Связаться со мной

    .contacts__block
      form.contacts-form
        .contacts-form__row
          .contacts-form__item
            span.contacts-form__title Введите ваше имя
            .contacts-form__field
              input(type="text" name="name" placeholder="Имя" required).contacts-form__input
              +icon('user', 'contacts-form__icon')
              span.contacts-form__error

          .contacts-form__item
            span.contacts-form__title Введите ваш email
            .contacts-form__field
              input(type="email" name="email" placeholder="mail@example.com" required).contacts-form__input
              +icon('envelope', 'contacts-form__icon')
              span.contacts-form__error

        .contacts-form__row
          .contacts-form__item
            span.contacts-form__title Сообщение к письму
            .contacts-form__field
              textarea(name="message" placeholder="Сообщение к письму" required).contacts-form__input.contacts-form__input--textarea
              +icon('message', 'contacts-form__icon')
              span.contacts-form__error

        .contacts-form__row
          .contacts-form__item
            button(type="submit").contacts-form__btn Отправить