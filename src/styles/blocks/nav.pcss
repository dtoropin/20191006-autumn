.nav__list {
  display: flex;
}

.nav__item {
  & ~ .nav__item {
    margin-left: 60px;
  }
}

.nav__link {
  outline: none;
  text-decoration: none;
  border-bottom: 1px solid transparent;
  transition: .3s ease;

  &:hover {
    color: rgba(#fff, .8);
    border-bottom: 1px solid rgba(#fff, .8);
  }
}