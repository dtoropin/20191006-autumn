.contacts {
  height: 100%;
  background: url(../images/background/bg-skills.jpg) no-repeat center / cover;
  color: #fff;
  padding-top: 60px;
}

.contacts__container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.contacts__title {
  font-size: 36px;
  font-weight: bold;
  margin-bottom: 95px;
}

.contacts__block {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}